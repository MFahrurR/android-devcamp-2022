<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".day2.firstapp.acitivity.FirstActivity">

    <Button
        android:id="@+id/btn_navigate_to_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:text="@string/btn_navigate_to_activity" />

    <Button
        android:id="@+id/btn_navigate_to_activity_with_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:text="@string/btn_navigate_to_activity_with_data" />

    <Button
        android:id="@+id/btn_navigate_to_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:text="@string/btn_navigate_to_fragment" />

</LinearLayout>